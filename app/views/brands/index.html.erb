
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Item Brand
                    <span style="float:right;">ကုန္ပစၥည္း အမွတ္တံဆိပ္သစ္ ထည့္သြင္းရန္</span>
                    </h1>
                    
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                                   List of Brands
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">

                                    <h1>Lists of Brand</h1>

                                    <table class="table table-bordered">
                                      <thead>
                                        <tr>
                                          <th>Name</th>
                                          <th>Desc</th>
                                          <th colspan="3"></th>
                                        </tr>
                                      </thead>

                                      <tbody>
                                        <% @brands.each do |brand| %>
                                            <tr>
                                              <td><%= brand.name %></td>
                                              <td><%= brand.desc %></td>
                                              <td><%= link_to 'Show', brand %></td>
                                              <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
                                              <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                            </tr>
                                          <% end %>
                                      </tbody>
                                    </table>

                                    <br>

                                    <%= link_to 'New Brand', new_brand_path,  :class=>"btn btn-default" %>


                                </div>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->








