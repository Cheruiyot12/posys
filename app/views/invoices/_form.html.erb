<%= form_for(@invoice) do |f| %>
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% @invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :invoice_number %><br>
    <%= f.text_field :invoice_number, :class =>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :customer_name %><br>
    <%= f.text_field :customer_name, :class =>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %> <span style="color:red;">(optional)</span><br>
    <%= f.text_field :phone_number, :class =>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :payment_type %><span style="color:red;"> (must)</span><br>
    <%= f.text_field :payment_type, :class =>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :purchase_item %><br>
    <%= f.text_field :purchase_item, :class =>"form-control", :id=>"invoice_purchaseitem" %>
  </div>

  
    
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <%= f.submit "Send", :class =>"btn btn-primary" %>

<% end %>


