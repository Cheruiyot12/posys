<div ng-app="plunker">
   <div ng-controller="MainCtrl">
      <div id="page-wrapper">
         <div class="row">
            <div class="col-lg-12">
               <h1 class="page-header">Raw Material Pricing
                  <span style="float:right;">ဖုန္းစာအုပ္</span>
               </h1>     
            </div>
            <!-- /.col-lg-12 -->
         </div>
         <!-- /.row -->
         <div class="row">
            <div class="col-lg-12">
               <div class="panel panel-default">
                  <div class="panel-heading">
                     List of Raws
                  </div>
                  <div class="panel-body">
                     <div class="row">
                        <div class="col-lg-12">
                           <h1>Lists of Raw</h1>
                           <div ng-init="raw_materials = <%= @raw_materials.to_json %>">
                           </div>
                           <!-- filter with name -->
                       
                              <input  ng-model="raw_material.name" type="text" class="form-control input-lg" placeholder="By Name">
                           <br/>
                           <table class="table table-bordered">
                              <thead>
                                 <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Count</th>
                                    <th colspan="3"></th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <tr ng-repeat="raw_material in raw_materials | filter:{name:  raw_material.name}">
                                    <td>{{raw_material.name}}</td>
                                    <td>{{raw_material.price}}</td>
                                    <td>{{raw_material.count}}</td>
                                    <td> 
                                       <a class="btn btn-primary btn-sm" href="/raw_materials/{{raw_material.id}}">Show</a>
                                       <a class="btn btn-warning btn-sm" href="/raw_materials/{{raw_material.id}}/edit">Edit</a>
                                       <a class="btn btn-danger btn-sm" data-confirm="Are you sure?" data-method="delete" href="/raw_materials/{{raw_material.id}}" rel="nofollow">Destroy</a>
                                    </td>
                                 </tr>
                              </tbody>
                           </table>
                           <br>
                           <%= link_to  'New Raw', new_raw_material_path, :class=>"btn btn-default" %>
                        </div>
                     </div>
                     <!-- /.row (nested) -->
                  </div>
                  <!-- /.panel-body -->
               </div>
               <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
         </div>
         <!-- /.row -->
      </div>
      <!-- /#page-wrapper -->
   </div>
</div>