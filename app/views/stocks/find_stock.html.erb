<div ng-app="plunker">
   <div ng-controller="MainCtrl">
      <div id="page-wrapper">
         <div class="row">
            <div class="col-lg-12">
               <h1 class="page-header">Find Stock
                  <span style="float:right;">ကုန္ပစၥည္း စာရင္း</span>
               </h1>     
            </div>
            <!-- /.col-lg-12 -->
         </div>
         <!-- /.row -->
         <div class="row">
            <div class="col-lg-12">
               <div class="panel panel-default">
                  <div class="panel-heading">
                     List of Stocks
                  </div>
                  <div class="panel-body">
                     <div class="row">
                        <div class="col-lg-12">
                           <h1>Lists of Stock</h1>
                           <div ng-init="stocks = <%= @stocks.to_json %>">
                           </div>
                           <!-- filter with name -->
                       
                              <input  ng-model="stock.brand" type="text" class="form-control input-lg" placeholder="By Brand">
                           <br/>
                           <table class="table table-bordered">
                              <thead>
                                 <tr>
                                    <th>Brand</th>
                                    <th>Number of item</th>
                                    <th>Item price</th>
                                    <th>Wholesale price</th>
                                    <th>Purchase price</th>
                                    <th colspan="3"></th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <tr ng-repeat="stock in stocks | filter:{brand:  stock.brand}">
                                    <td>{{stock.brand}}</td>
                                    <td>{{stock.number_of_item}}</td>
                                    <td>{{stock.item_price}}</td>
                                    <td>{{stock.wholesale_price}}</td>
                                    <td>{{stock.purchase_price}}</td>
                                    <td> 
                                       <a class="btn btn-primary btn-sm" href="/stocks/{{stock.id}}">Show</a>
                                       <a class="btn btn-warning btn-sm" href="/stocks/{{stock.id}}/edit">Edit</a>
                                       <a class="btn btn-danger btn-sm" data-confirm="Are you sure?" data-method="delete" href="/stocks/{{stock.id}}" rel="nofollow">Destroy</a>
                                    </td>
                                 </tr>
                              </tbody>
                           </table>
                           <br>
                        </div>
                     </div>
                     <!-- /.row (nested) -->
                  </div>
                  <!-- /.panel-body -->
               </div>
               <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
         </div>
         <!-- /.row -->
      </div>
      <!-- /#page-wrapper -->
   </div>
</div>