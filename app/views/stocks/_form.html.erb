    <%= f.label :number_of_item %><br>
    <%= f.text_field :number_of_item, :class =>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :purchase_price %><br>
    <%= f.text_field :purchase_price, :class =>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :wholesale_price %><br>
    <%= f.text_field :wholesale_price, :class =>"form-control" %>
  </div>
  <div class="form-group">
    <label>Retail price</label><br>
    <%= f.text_field :item_price, :class =>"form-control" %>
