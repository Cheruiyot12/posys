
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Item Type
                    <span style="float:right;">ကုန္ပစၥည္း အမ်ိဳးအစားသစ္ ထည့္သြင္းရန္</span>
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                                   List of Types
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">

                                    <h1>Lists of Type</h1>

                                    <table class="table table-bordered">
                                      <thead>
                                        <tr>
                                          <th>Name</th>
                                          <th>Desc</th>
                                          <th colspan="3"></th>
                                        </tr>
                                      </thead>

                                      <tbody>
                                        <% @types.each do |type| %>
                                          <tr>
                                            <td><%= type.name %></td>
                                            <td><%= type.desc %></td>
                                            <td><%= link_to 'Show', type %></td>
                                            <td><%= link_to 'Edit', edit_type_path(type) %></td>
                                            <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                          </tr>
                                        <% end %>
                                      </tbody>
                                    </table>

                                    <br>

                                    <%= link_to 'New Type', new_type_path,  :class=>"btn btn-default" %>


                                </div>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->






