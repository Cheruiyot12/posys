<div ng-app="plunker">
   <div ng-controller="MainCtrl">
      <div id="page-wrapper">
         <div class="row">
            <div class="col-lg-12">
               <h1 class="page-header">Contact
                  <span style="float:right;">ဖုန္းစာအုပ္</span>
               </h1>     
            </div>
            <!-- /.col-lg-12 -->
         </div>
         <!-- /.row -->
         <div class="row">
            <div class="col-lg-12">
               <div class="panel panel-default">
                  <div class="panel-heading">
                     List of Contacts
                  </div>
                  <div class="panel-body">
                     <div class="row">
                        <div class="col-lg-12">
                           <h1>Lists of Contact</h1>
                           <div ng-init="phone_books = <%= @phone_books.to_json %>">
                           </div>
                           <!-- filter with name -->
                       
                              <input  ng-model="phone_book.name" type="text" class="form-control input-lg" placeholder="By Name">
                           <br/>
                           <table class="table table-bordered">
                              <thead>
                                 <tr>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Company</th>
                                    <th colspan="3"></th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <tr ng-repeat="phone_book in phone_books | filter:{name:  phone_book.name}">
                                    <td>{{phone_book.name}}</td>
                                    <td>{{phone_book.phone}}</td>
                                    <td>{{phone_book.company}}</td>
                                    <td> 
                                       <a class="btn btn-primary btn-sm" href="/phone_books/{{phone_book.id}}">Show</a>
                                       <a class="btn btn-warning btn-sm" href="/phone_books/{{phone_book.id}}/edit">Edit</a>
                                       <a class="btn btn-danger btn-sm" data-confirm="Are you sure?" data-method="delete" href="/phone_books/{{phone_book.id}}" rel="nofollow">Destroy</a>
                                    </td>
                                 </tr>
                              </tbody>
                           </table>
                           <br>
                           <%= link_to  'New Contact', new_phone_book_path, :class=>"btn btn-default" %>
                        </div>
                     </div>
                     <!-- /.row (nested) -->
                  </div>
                  <!-- /.panel-body -->
               </div>
               <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
         </div>
         <!-- /.row -->
      </div>
      <!-- /#page-wrapper -->
   </div>
</div>